
@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Bitcraft Resource Finder";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        .badge-unconfirmed {
            background: #ffc107;
            color: #222;
        }

        .badge-confirmed {
            background: #198754;
        }

        /* Compact resource cards */
        .card-grid {
            row-gap: .75rem !important;
        }

        .resource-card {
            --thumb-h: 160px;
        }
        @@media (min-width: 1400px) { /* xxl and up */
            .resource-card

        {
            --thumb-h: 180px;
        }

        }

        .resource-card .card-img-top {
            height: var(--thumb-h);
            object-fit: cover; /* crop to a consistent thumbnail */
        }

        .resource-card .card-body {
            padding: .5rem .75rem; /* tighter padding */
        }

        .resource-card .title {
            font-size: .95rem;
            margin: 0 0 .25rem 0;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis; /* long names don’t balloon */
        }

        .resource-card .meta {
            font-size: .8rem;
            opacity: .8;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body class="bg-light">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Bitcraft Resource Finder</a>
    <div class="d-flex">
      <a class="btn btn-outline-light me-2" href="/resources/new">Add Resource</a>
      <a class="btn btn-warning" href="/admin">Admin</a>
    </div>
  </div>
</nav>
    <main class="container-xxl">
    @RenderBody()
</main>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
