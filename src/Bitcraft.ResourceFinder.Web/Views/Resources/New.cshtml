@using Bitcraft.ResourceFinder.Web.Models
@{
    ViewData["Title"] = "Add Resource";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Safely materialize lists so we don't dereference possibly-null ViewBag entries.
    var types = (ViewBag.Types as IEnumerable<TypeItem>) ?? Enumerable.Empty<TypeItem>();
    var biomes = (ViewBag.Biomes as IEnumerable<Biome>) ?? Enumerable.Empty<Biome>();
}
<div class="card p-4">
  <form method="post" action="/resources" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(excludePropertyErrors: true)
            </div>
        }
    <div class="row g-3">
      <div class="col-md-2">
        <label class="form-label">Tier</label>
        <select class="form-select" name="tier" required>
          @for (int i = 1; i <= 10; i++) { <option value="@i">@i</option> }
        </select>
      </div>
      <div class="col-md-5">
        <label class="form-label">Type</label>
                <select class="form-select" id="typeId" name="typeId" required>
                    @foreach (var t in types)
                    {
                        <option value="@t.Id">@t.Name</option>
                    }
                </select>
      </div>
      <div class="col-md-5">
        <label class="form-label">Biome</label>
                <select class="form-select" id="biomeId" name="biomeId" required>
                    @foreach (var b in biomes)
                    {
                        <option value="@b.Id">@b.Name</option>
                    }
                </select>
      </div>
      <div class="col-md-12">
        <label class="form-label">Name</label>
        <input class="form-control" name="name" placeholder="e.g., Iron Ore" required maxlength="80" />
      </div>
      <div class="col-md-12">
                <label class="form-label">Image</label>
                <!-- Image cropper (512Ã—512 PNG) -->
                <div class="image-crop-512" data-field="image" data-proxy-url="/image-proxy?url="></div>
      </div>
      <div class="col-md-12">
        <button class="btn btn-primary">Submit</button>
        <a class="btn btn-secondary" href="/resources">Cancel</a>
      </div>
    </div>
  </form>
</div>
@section Scripts {
    <script src="~/js/image-crop-512.js"></script>
    <script>
        // Auto-detects the nearest <form>; no id needed
        initImageCrop512('.image-crop-512');
    </script>
}

